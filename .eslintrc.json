{
    "env":
    {
        "browser": true,
        "es6": true
    },
    "parser": "babel-eslint",
    "extends": ["plugin:react/recommended"],
    "globals":
    {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions":
    {
        "ecmaFeatures":
        {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "modules": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "react",
        "jsx-a11y"
    ],
    "rules":
    {
        "comma-dangle": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "no-unused-vars": "warn",
        "no-console": 1,
        "react/prop-types": 0
    }
}