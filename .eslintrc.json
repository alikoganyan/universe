{
    "env":
    {
        "browser": true,
        "es6": true,
        "react-native/react-native": true
    },
    "settings":
    {
        "react":
        {
            "version": "detect"
        }
    },
    "parser": "babel-eslint",
    "extends": ["plugin:react/recommended"],
    "globals":
    {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions":
    {
        "ecmaFeatures":
        {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "modules": true
        },
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "plugins": [
        "import",
        "react",
        "jsx-a11y",
        "react-native"
    ],
    "rules":
    {
        // "no-console": 1,
        // "react-native/no-inline-styles": 2,
        "comma-dangle": 0,
        "react/prop-types": 0,
        "react/jsx-uses-vars": 1,
        "react/jsx-uses-react": 1,
        "react/display-name": 0,
        "react/no-access-state-in-setstate": 1,
        "react/no-danger": 2,
        "react/no-deprecated": 2,
        "react/no-direct-mutation-state": 2,
        "react/no-unsafe": 2,
        "react/no-unknown-property": 1,
        "react-native/no-unused-styles": 1,
        "react-native/no-color-literals": 1,
        "semi": 2,
        "eol-last": 2,
        "no-dupe-args": 2,
        "no-empty": 2,
        "default-case": 2,
        "no-labels": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-redeclare": 2,
        "no-self-compare": 2,
        "no-unused-labels": 2,
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "arrow-body-style": 2,
        "arrow-spacing": 2,
        "no-var": 2,
        "prefer-const": 2
    }
}